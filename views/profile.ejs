<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HireUp | Login & SignUp</title>
    <link rel="stylesheet" href="/CSS/profile.css">
    <link rel="shortcut icon" href="/Assets/Images/HireUp_favicon.png" type="image/x-icon">
    <script src="/JS/profile.js" defer></script>
</head>

<%- include('partials/nav') %>

    <div class="profile-container">
        <div class="profile-img">
            <img src="/Assets/Images/account.png" alt="">
        </div>
        <div class="profile-content">
            <div class="profile-name">
                <p><span>Name:</span>
                    <%= nameEJS %>
                </p>
            </div>
            <div class="profile-email">
                <p><span>Email:</span><span class="expert-email">
                        <%= emailEJS %>
                    </span></p>
            </div>
            <div class="profile-number">
                <p><span>Mobile Number:</span>
                    <%= mobileEJS %>
                </p>
            </div>
            <div class="profile-pincode">
                <p><span>Pincode:</span>
                    <%= pinEJS %>
                </p>
            </div>
            <div class="profile-availablity">
                <p><span>Is available:</span>
                    <%= availableEJS %>
                </p>
            </div>
            <div class="profile-profession">
                <p><span>Profession:</span>
                    <%= professionEJS %>
                </p>
            </div>
            <div class="profile-description">
                <p><span>Description :</span>
                    <%= descriptionEJS %>
                </p>
            </div>
            <div class="profile-number">
                <p><span>Rate:</span>
                    <%= rateEJS %>/Hour
                </p>
            </div>
            <button class="btn hire-btn">Hire Expert</button>
        </div>
    </div>
    <%- include('partials/footer') %>

</html>